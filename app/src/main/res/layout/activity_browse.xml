<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#CDB275"
    android:padding="10sp"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.projects.plantie.BrowseActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_margin="10sp"
        app:cardCornerRadius="10sp"
        app:cardBackgroundColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_browse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Browse"
                android:textSize="48sp"
                card_view:layout_editor_absoluteX="169dp"
                card_view:layout_editor_absoluteY="48dp" />

            <Button
                android:id="@+id/test_add_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:text="Add"
                app:layout_constraintEnd_toEndOf="@+id/text_browse"
                app:layout_constraintTop_toTopOf="@+id/text_browse" />

            <Button
                android:id="@+id/test_del_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="8dp"
                android:text="Del"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/text_browse" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/browse_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2" >


            <androidx.cardview.widget.CardView
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="10sp"
                android:layout_gravity="fill"
                app:cardCornerRadius="10sp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/flower_image_card"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_margin="10sp"
                        app:cardCornerRadius="10sp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        card_view:cardBackgroundColor="@android:color/transparent">

                        <ImageView
                            android:id="@+id/flower_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/flower1" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/flower_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingTop="5sp"
                        android:paddingBottom="2sp"
                        android:text="Red Rose"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        app:layout_constraintTop_toBottomOf="@+id/flower_image_card">

                    </TextView>

                    <Button
                        android:id="@+id/delete_card"
                        android:layout_width="20sp"
                        android:layout_height="30sp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:text="."
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#CDB275"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/capture_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:paddingBottom="5sp"
                        android:paddingRight="10sp"
                        android:paddingLeft="10sp"
                        android:text="03 Jan 2022, 03:45"
                        android:textAlignment="gravity"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@+id/flower_name">

                    </TextView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>




        </GridLayout>
    </ScrollView>

</LinearLayout>